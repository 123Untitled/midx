[pattern 'loop1'
	:: section [track 'theme'

		:note ['hello'
			:seq @16/3 10 (A#3 B3) C4
			] >< 'theme'

		:trig ['rtm1'
			:seq 10001010
			:reset true
		]
	]
	:: cond
		if ("theme".velocity < 80) {
			"theme".octave = +1
		}
		elif ("theme".trigger == 0) {
			"theme".prob = 30
		}
]

